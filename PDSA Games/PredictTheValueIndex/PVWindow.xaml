<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av" x:Class="PDSA_Games.PVWindow"
        Title="Predict the Value Index Game" Height="450" Width="800">
    <Grid>
        <Button Content="Start New Game" Click="StartNewGame_Click" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <TextBlock x:Name="RandomNumberTextBlock" HorizontalAlignment="Center" VerticalAlignment="Center" av:IsHidden="True"/>
        <ComboBox x:Name="PredictionComboBox" ItemsSource="{Binding Choices}" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,280,0,0" Width="267"/>
        <Button Content="Submit Prediction" Click="SubmitPrediction_Click" HorizontalAlignment="Center" VerticalAlignment="Bottom" av:IsHidden="True"/>
        <TextBlock x:Name="ResultTextBlock" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,343,0,0"/>
    </Grid>
</Window>
