<Window x:Class="PDSA_Games.RememberGame"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PDSA_Games"
        mc:Ignorable="d"
        Title="RememberGame" Height="450" Width="800">
    <Grid>
        <Button x:Name="StartRound" Content="StartRound" HorizontalAlignment="Center" Height="51" Margin="0,71,0,0" VerticalAlignment="Top" Width="180" Click="StartRound_Click" FontSize="16" FontFamily="Cascadia Code"/>
        <Button x:Name="PerformSort" Content="Perform Sort" HorizontalAlignment="Center" Height="50" VerticalAlignment="Center" Width="180" Click="PerformSort_Click" FontSize="16" FontFamily="Cascadia Code"/>
        <TextBlock x:Name="ResultsTextBlock" HorizontalAlignment="Left" Height="81" Margin="531,71,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="218"/>
        <Button x:Name="Menu" Content="Main Menu" HorizontalAlignment="Center" Height="46" Margin="0,134,0,0" VerticalAlignment="Top" Width="180" FontSize="16" FontFamily="Cascadia Code" Click="Menu_Click"/>

    </Grid>
</Window>
